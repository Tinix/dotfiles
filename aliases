# Aliases

alias cp="cp -i"                          # confirm before overwriting something
alias df='df -h'                          # human-readable sizes
alias free='free -m'                      # show sizes in MB
alias np='nano -w PKGBUILD'
alias more=less
alias mcd="mkdir -p"

alias tm="tmux"
alias n="nvim"
alias vi="vim"
alias v="vim"

alias dk="docker"
alias open="Thunar"

# Unix
alias ll="ls -la"
alias ..="cd .."
alias t="touch"
alias java="java -version"
alias je="cd"
alias p="pwd"
alias st="status"
alias ln="ln -v"
alias c="cd"
alias pw="pwd"
alias mkdir="mkdir -p"
alias e="$EDITOR"

# Bundler
alias be="bundle exec"
alias b="bundler"

# Rails
alias migrate="rake db:migrate db:rollback && rake db:migrate db:test:prepare"
alias s="rspec"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

##------------------------ Git --------------------------##
alias g="git status"
alias gdiff="git diff"
alias glog="git log"
alias gadd="git add ."
alias gcommit="git commit"
