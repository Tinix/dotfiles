# .bash_aliases

alias cp="cp -i"                          # confirm before overwriting something
alias df='df -h'                          # human-readable sizes
alias free='free -m'                      # show sizes in MB
alias np='nano -w PKGBUILD'
alias more=less

# Personali Unix alias

alias ..="cd .."
alias c="cd"
alias ll="ls -l"
alias t="touch"
alias ru="ruby -v"
alias ra="rails -v"
alias e="emacs &"
alias java="java -version"
alias je="cd"
alias cls="clear"
alias p="pwd"
alias lll="ls -lai"
alias st="status"

alias tm="tmux"
alias n="nvim"
alias vi="vim"
alias v="vim"

alias dk="docker"
alias open="Thunar"

# Unix
alias ll="ls -l"
alias lll="ls -lai"
alias ln="ln -v"
alias c="cd"
alias pw="pwd"
alias mkdir="mkdir -p"
alias e="$EDITOR"

# Bundler
alias be="bundle exec"
alias b="bunder"

# Rails
alias migrate="rake db:migrate db:rollback && rake db:migrate db:test:prepare"
alias s="rspec"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

##------------------------ Git --------------------------##
alias g="git status"
alias gd="git diff"
alias gl="git log"
alias ga="git add ."
alias gc="git commit"
alias gp="git push"
